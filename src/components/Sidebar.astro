---
const { posts, currentTitle } = Astro.props;
type Post = {
    slug: string;
    title: string;
};

export interface Props {
    posts: Post[];
    currentTitle: string;
}
---

<aside class="w-full sm:w-60 p-6">
    <h2 class="text-sm font-semibold tracki uppercase text-gray-400">目次</h2>
    <div class="flex flex-col space-y-1">
        {
            posts.map((post) => {
                const classPropaties =
                    post.title == currentTitle ? "font-bold underline" : "";
                return (
                    <a
                        rel="noopener noreferrer"
                        class={classPropaties}
                        href={post.slug}
                    >
                        {post.title}
                    </a>
                );
            })
        }
    </div>
</aside>
