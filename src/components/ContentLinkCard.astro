---
const { title, link, type } = Astro.props;
export interface Props {
    title: string;
    link: string;
    type: string;
}
---

<div class="p-6 rounded-md shadow-md text-gray-50">
    <div class="mt-6 mb-2 text-center">
        {type == "next" ? ">" : "<"}
        <a href={link} class="text-xl font-semibold tracki hover:underline"
            >{title}
        </a>
    </div>
</div>
